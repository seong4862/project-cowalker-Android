<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/image_swipe"
            android:layout_width="match_parent"
            android:layout_height="172dp">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="23dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="19dp"
                    android:src="@drawable/heart" />

                <TextView
                    android:layout_width="254dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="18dp"
                    android:text="KU석KU석 프로젝트      '사라진 친구를 찾아라'"
                    android:textColor="#444444"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="0dp"
                    android:text="With 이충엽"
                    android:textColor="#f8c930"
                    android:textSize="14sp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/message" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/scrap_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="302dp"
                        android:layout_marginRight="21dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/scrap" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/scrap" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="34dp"
                        android:layout_height="18dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="300dp"
                        android:layout_marginRight="16dp"
                        android:text="스크랩"
                        android:textColor="#444444"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="23dp"
                        android:layout_height="18dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="20dp"
                        android:text="여정"
                        android:textColor="#444444"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:text="지역"
                    android:textColor="#c5c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginTop="20dp"
                    android:text="서울"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:text="목적"
                    android:textColor="#c5c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="68dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginTop="20dp"
                    android:text="공모전 참여"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:text="분야"
                    android:textColor="#c5c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="39dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="20dp"
                    android:text="콘텐츠"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="41dp"
                android:layout_marginRight="5dp"
                android:text="대학교에서 역사도 배우고 즐기는 야외 방탈출 게임"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="126dp"
                android:layout_height="24dp"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="214dp"
                android:layout_marginTop="16dp"
                android:text="프로젝트 상세 소개"
                android:textColor="#444444"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_short"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="9dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="저희 크레용은 역사적 사실을 콘텐츠로 풀어내는 소셜 크리에이션 그룹입니다. 현재 KU석KU석 프로젝트를 진행하고 있으며 KU석KU석 프로젝트는 대학교에서 진행되는 야외방탈출 게임입니다. "
                android:textColor="#666666" />

            <ImageButton
                android:id="@+id/see_more"
                android:layout_width="73dp"
                android:layout_height="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="165dp"
                android:layout_marginRight="144dp"
                android:layout_marginTop="7dp"
                android:background="@android:color/transparent"
                android:src="@drawable/group_3"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/see_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                android:clickable="true"
                android:background="@drawable/blue_copy"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:background="@drawable/edit_design"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="230dp"
                    android:layout_marginTop="17dp"
                    android:text="모집"
                    android:textColor="#444444"
                    android:textSize="16sp" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete_gray"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/addbtn"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="19dp"
                android:orientation="vertical"
                android:background="@drawable/layout_design">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="42dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="43dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="개발자"
                        android:textColor="#666666"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="21dp"
                        android:layout_height="19dp"
                        android:layout_marginTop="20dp"
                        android:text="1명"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="42dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:background="#64dfff"
                        android:gravity="center"
                        android:text="D-9"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <TextView
                    android:layout_width="106dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="197dp"
                    android:layout_marginTop="10dp"
                    android:text="웹앱 서비스 개발"
                    android:textColor="#666666"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="33dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/layout_design">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="43dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="20dp"
                        android:text="디자이너"
                        android:textColor="#666666"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="21dp"
                        android:layout_height="19dp"
                        android:layout_marginTop="20dp"
                        android:text="1명"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="42dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="188dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:background="#64dfff"
                        android:gravity="center"
                        android:text="D-9"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <TextView
                    android:layout_width="106dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="197dp"
                    android:layout_marginTop="10dp"
                    android:text="로고 및 앱디자인"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@drawable/lowbar_design"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="23dp"
                android:background="@android:color/transparent"
                android:src="@drawable/heart" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="21dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="53dp"
                android:layout_marginTop="22dp"
                android:background="@android:color/transparent"
                android:src="@drawable/square" />

            <Button
                android:id="@+id/btn_join"
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#64dfff"
                android:text="수정하기"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>